    "preact-cli": "^3.0.0-rc.6",
    "sass-loader": "^8.0.2",
    "sirv-cli": "^0.4.5",
    "ts-loader": "^6.2.2",
    "typescript": "^3.9.2"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
